FROM python:3
ENV PYTHONUNBUFFERED 1
RUN mkdir /code
WORKDIR /code
ADD requirements.txt /code/
#RUN pip install -r requirements.txt
ARG pythonLocation=/opt/test

RUN echo $pythonLocation
#RUN --mount=target=/usr/local/lib/python3.11/site-packages,type=bind,source=$pythonLocation \ 
#     pip install -r requirements.txt
RUN --mount=target=/usr/local/lib/python3.11/site-packages,type=bind,source=/opt/hostedtoolcache/Python/3.11.0/x64/lib/python3.11/site-packages
RUN pip install -r requirements.txt
#RUN  --mount=type=cache,target=/root/.cache/pip \
#    pip install -r requirements.txt
    
RUN pwd
RUN ls -alg /root/.cache/pip
RUN pip list -v

ADD . /code/
EXPOSE 8000
CMD ["python3","manage.py","runserver","0.0.0.0:8000"]
